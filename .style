style.name: ClassicWhiter

rootCommand: bsetroot -full -wall -scale 100%

# toolbar:
toolbar.appearance: flat solid border
toolbar.textColor: #8c8c8c

toolbar.label.appearance: flat solid
toolbar.label.textColor: #ffffff
toolbar.label.marginWidth: 1
toolbar.label.backgroundColor: #ffffff

toolbar.windowLabel.appearance: flat solid border
toolbar.windowLabel.textColor: #7e7e7e
toolbar.windowLabel.backgroundColor: #ffffff
toolbar.windowLabel.borderColor: #a2a2a2
toolbar.windowLabel.borderWidth: 1

toolbar.clock.appearance: flat solid border
toolbar.clock.textColor: #ffffff
toolbar.clock.backgroundColor: #ffffff
toolbar.clock.borderColor: #ffffff
toolbar.clock.borderWidth: 16

toolbar.marginWidth: 1
toolbar.font: Calibri
toolbar.fontHeight: 13
toolbar.backgroundColor: #ffffff
toolbar.borderColor: #c0c0c0
toolbar.borderWidth: 1


# menu:
menu.title.appearance: flat solid
menu.title.textColor: #303030
menu.title.marginWidth: 0
menu.title.backgroundColor: #ffffff


menu.frame.appearance: flat solid border
menu.frame.backgroundColor: #ffffff
menu.frame.textColor: #606060
menu.frame.foregroundColor: #d1d1d1
menu.frame.disabledColor: #3d3d3d
menu.frame.marginWidth: 0
menu.frame.font: Calibri
menu.frame.fontHeight: 14
menu.frame.borderColor: #959595
menu.frame.borderWidth: 1

menu.bullet: triangle
menu.bullet.position: right

menu.active.appearance: flat solid border
menu.active.backgroundColor: #ffffff
menu.active.textColor: #5c5c5c
menu.active.foregroundColor: #000000
menu.active.marginWidth: 0
menu.active.borderColor: #5c5c5c
menu.active.borderWidth: 1


menu.title.font: Calibri
menu.title.fontHeight: 14

#window here:
window.title.focus.appearance: flat solid border
window.title.focus.backgroundColor: #ebebeb
window.title.focus.borderColor: #707070
window.title.focus.borderWidth: 1

window.title.unfocus.appearance: flat solid border
window.title.unfocus.backgroundColor: #cccccc
window.title.unfocus.borderColor: #707070
window.title.unfocus.borderWidth: 1
window.title.marginWidth: 0
window.label.marginWidth: 0

window.label.focus.appearance: flat solid
window.label.focus.textColor: #303030
window.label.focus.backgroundColor: #ebebeb
#window.label.focus.fontheight: 12

window.label.unfocus.appearance: parentrelative
window.label.unfocus.textColor: #888888



window.frame.focus.borderColor: #707070
window.frame.unfocus.borderColor: #707070
window.frame.borderWidth: 1
window.handle.focus.appearance: flat solid border
window.handle.focus.backgroundColor: #ffffff
window.handle.focus.borderColor: #707070
window.handle.focus.borderWidth: 1
window.handle.unfocus.appearance: flat solid
window.handle.unfocus.backgroundColor: #d1d1d1
window.grip.focus.appearance: parentrelative border
window.grip.focus.borderColor: #707070
window.grip.focus.borderWidth: 1
window.grip.unfocus.appearance: parentrelative




# buttons:
toolbar.button.marginWidth: 0

window.button.marginWidth: 0

# buttons:
toolbar.button.appearance: parentrelative
toolbar.button.foregroundColor: #ffffff
toolbar.button.pressed.appearance: parentrelative
toolbar.button.pressed.foregroundColor: #ffffff

window.button.focus.appearance: parentrelative
window.button.focus.foregroundColor: #404040
window.button.unfocus.appearance: parentrelative
window.button.unfocus.foregroundColor: #888888
window.button.pressed.appearance: parentrelative
window.button.pressed.foregroundColor: #404040



# Fonts:

toolbar.alignment: center

menu.title.alignment: left

menu.frame.alignment: left

window.alignment: center

window.font: Calibri
window.fontHeight: 14

window.handleHeight: 0

!-- lost & found --
menu.bullet.color1: #404040
menu.bullet.backgroundColor: #404040
menu.separator.color1: #404040
menu.separator.backgroundColor: #404040




slit.appearance: flat solid border
slit.backgroundColor: #ffffff
slit.marginWidth: 0
slit.borderColor: #7f7f7f
slit.borderWidth: 1

